{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Brazil average direct normal per state (the amount of solar radiation from the direction of the sun)",
  "width": 800,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/Sequencev/FIT3179/master/choropleth_map/js/gadm36_BRA_1.json",
    "format": {"type": "topojson", "feature": "gadm36_BRA_1"}
  },
  "mark": {"type": "geoshape"},
  "projection": {"type": "equirectangular"},
  "transform": [
    {
      "lookup": "properties.NAME_1",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/Sequencev/FIT3179/master/choropleth_map/data/direct_normal_average.csv"
        },
        "key": "STATE",
        "fields": ["ANNUAL"]
      }
    },
    {"calculate": "datum.ANNUAL + 1", "as": "Annual"}
  ],
  "encoding": {
    "color": {
      "field": "Annual",
      "type": "quantitative",
      "scale": {
        "type": "threshold",
        "domain": [2000, 3000, 4000],
        "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#a63603"]
      }
    },
    "tooltip": [
      {"field": "properties.NAME_1", "type": "nominal", "title": "Country"},
      {"field": "ANNUAL", "type": "quantitative", "format": ".2f"}
    ]
  },
  "config": {}
}
